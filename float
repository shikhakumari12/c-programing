#include <stdio.h>

int main() {
    float sub1, sub2, sub3, sub4, total, percentage;          
    printf("Enter marks of 4 subjects (out of 40 each):\n");
       scanf("%f %f %f %f", &sub1, &sub2, &sub3, &sub4);
       total = sub1 + sub2 + sub3 + sub4;
       percentage = (total / 160) * 100;
       printf("\nTotal Marks = %.2f / 160\n", total);
       printf("Percentage = %.2f%%\n", percentage);

    return 0;
}
